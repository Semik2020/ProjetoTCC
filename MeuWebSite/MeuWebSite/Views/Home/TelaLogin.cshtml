@model MeuWebSite.Models.Pessoa
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TelaLogin</title>
    @Styles.Render("~/Content/css")
</head>
<body>

    <br /><br /><br /><br /><br />


    <form>
        <div>
            <fieldset style="width: 400px; margin-left: 400px; border-style:solid; border-radius:20px; border-color:cadetblue">

                <div class="form-group">
                    <label for="exampleInputEmail1">Endereço de email</label><br />
                    @Html.EditorFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email)
                    <small id="emailHelp" class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Senha</label><br />
                    @Html.EditorFor(m => m.Senha)
                    @Html.ValidationMessageFor(m => m.Senha)
                </div>

                @Html.ActionLink("Conectar-se", "TelaAdm", "Home", new { id = 4 }, new { @class = "btn btn-outline-warning" })
            </fieldset>
        </div>
        @section Scripts{ @Scripts.Render("~/bundles/jqueryval")}
    </form>

</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</html>

